<%= render 'layouts/errors', object: @magician %>

<div class="well bs-component col-md-offset-3 col-md-6">
  <legend>Enter the magician's information:</legend>
  <%= form_for [@user, @magician], class: 'form-vertical' do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :firstname, class: "col-md-4 control-label" %>
      <div class="col-md-9">
        <%= f.text_field :firstname %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :lastname, class: "col-md-4 control-label" %>
      <div class="col-md-9">
        <%= f.text_field :lastname %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-4">
        <% if @user.new_record? %>
          <%= f.submit "Create magician" %>
        <% else %>
          <%= f.submit "Update magician" %>
        <% end %>
      </div>
    </div>
  </fieldset>
  <% end %>
</div>
