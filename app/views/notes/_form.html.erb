<%= render 'layouts/errors', object: @note %>

<div class="well bs-component col-md-offset-3 col-md-6">
  <legend>Enter the new note:</legend>
  <%= form_for [@user, @note], class: 'form-vertical' do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :title, class: "col-md-4 control-label" %>
      <div class="col-md-9">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-md-4 control-label" %>
      <div class="col-md-9">
        <%= f.text_field :description %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-4">
        <%= f.submit %>
      </div>
    </div>
  </fieldset>
  <% end %>
</div>
